<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="532.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Medical_Assistant.TBWcalculatorController">
   <children>
      <Label layoutX="173.0" layoutY="14.0" prefHeight="44.0" prefWidth="296.0" text="       TBW CALCULATOR" textFill="#dd1227">
         <font>
            <Font size="26.0" />
         </font>
      </Label>
      <Label layoutX="69.0" layoutY="79.0" prefHeight="36.0" prefWidth="281.0" text="Give Your Informations :" textFill="#127479">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <RadioButton fx:id="Male" layoutX="69.0" layoutY="129.0" mnemonicParsing="false" onAction="#MaleFemale" text="Male">
         <toggleGroup>
            <ToggleGroup fx:id="a" />
         </toggleGroup></RadioButton>
      <RadioButton fx:id="Female" layoutX="69.0" layoutY="159.0" mnemonicParsing="false" onAction="#MaleFemale" text="Female" toggleGroup="$a" />
      <Label layoutX="69.0" layoutY="202.0" prefHeight="25.0" prefWidth="48.0" text="Age : " />
      <Label layoutX="69.0" layoutY="242.0" prefHeight="36.0" prefWidth="70.0" text="Height(cm) :" />
      <TextField fx:id="Age" layoutX="152.0" layoutY="202.0" onAction="#AgeTF" />
      <TextField fx:id="Height" layoutX="152.0" layoutY="248.0" onAction="#HeightTF" />
      <TextField fx:id="Weight" layoutX="152.0" layoutY="294.0" onAction="#WeightTF" />
      <Label layoutX="69.0" layoutY="288.0" prefHeight="36.0" prefWidth="86.0" text="Weight(kg) :" />
      <Label layoutX="32.0" layoutY="375.0" prefHeight="36.0" prefWidth="261.0" text="Total Body Water (Liters) : " textFill="#2e0cda">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <TextField fx:id="Result" layoutX="301.0" layoutY="375.0" onAction="#ResultTF" prefHeight="36.0" prefWidth="193.0" />
      <Button fx:id="Calculate" layoutX="301.0" layoutY="449.0" mnemonicParsing="false" onAction="#CalculateButton" prefHeight="25.0" prefWidth="76.0" text="Calculate" textFill="#535708">
         <font>
            <Font size="13.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button layoutX="494.0" layoutY="449.0" mnemonicParsing="false" onAction="#BackMenuFromTBW" prefHeight="29.0" prefWidth="127.0" text="Back to Main Menu">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
   </children>
</AnchorPane>
